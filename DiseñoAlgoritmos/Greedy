def num1(lista1, lista2):
    lista1.sort(reverse=True)
    lista2.sort()
    total=0
    for i in range(len(lista1)):
        total+= lista1[i]*lista2[i]
    return total

a1=[1,3,1]
a2=[5,6,4]
print(num1(a1,a2) )

def num3(lista1, lista2):
    lista1.sort()
    lista2.sort()
    print(lista1)
    print(lista2)
    total=0
    for i in range(len(lista1)):
        total+= abs(lista1[i]-lista2[i])
    return total

a1=[4,1,8,7]
a2=[2,3,6,5]
print(num3(a1,a2) )
